<?xml version="1.0" encoding="utf-8"?>

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rowCount="7"
    android:columnCount="2"
    android:useDefaultMargins="true"
    tools:context=".MainActivity"><!--margem de 8 dp-->


    <TextView
        android:id="@+id/gasTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnSpan="2"
        android:layout_gravity="fill_horizontal"
        android:text="@string/gas"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/gasValueTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/gasValue"
        android:textSize="18sp" />

    <SeekBar
        android:id="@+id/gasSeekBar"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:progress="1"
        android:min="1"
        android:max="20"
        android:layout_gravity="fill_horizontal" />

    <TextView
        android:id="@+id/ethanolTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnSpan="2"
        android:layout_gravity="fill_horizontal"
        android:text="@string/ethanol"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/ethanolValueTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="100"
        android:textSize="18sp" />

    <SeekBar
        android:id="@+id/ethanolSeekBar"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:progress="0"
        android:layout_gravity="fill_horizontal" />

    <TextView
        android:id="@+id/optionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnSpan="2"
        android:layout_gravity="fill_horizontal"
        android:text="@string/choice"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/ansTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnSpan="2"
        android:layout_gravity="fill_horizontal"
        android:text="@string/answer"
        android:textSize="24sp" />



</GridLayout>